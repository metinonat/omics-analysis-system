{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "backend/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - backend/tsconfig.json",
			"dependsOn": [
				"clean-dist"
			]
		},
		{
			"label": "clean-dist",
			"type": "shell",
			"command": "rm -R backend/dist/*",
			"args": [],
			"hide": true
		},
		{
			"type": "shell",
			"group": "build",
			"label": "[Backend] Rebuild Container",
			"command": "docker-compose up -d --build --force-recreate --no-deps omics-backend",
		}
	]
}